@model List<DTOChart>

<!DOCTYPE html>
<html>
<head>
    <title>Chart Page</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div>
        <canvas id="myPieChart" width="400" height="400"></canvas>
    </div>

    <script>
        // Parse the serialized data from ViewBag
        var chartData = @Html.Raw(ViewBag.ChartData);

        // Extract unique EntityNames and their counts
        var entityCounts = {};
        chartData.forEach(function (data) {
            if (entityCounts[data.EntityName] === undefined) {
                entityCounts[data.EntityName] = 1;
            } else {
                entityCounts[data.EntityName]++;
            }
        });

        // Prepare data for the Pie chart
        var labels = Object.keys(entityCounts);
        var data = Object.values(entityCounts);

        // Create Pie chart
        var ctx = document.getElementById('myPieChart').getContext('2d');
        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)',
                        'rgba(255, 159, 64, 0.7)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
    </script>
</body>
</html>
